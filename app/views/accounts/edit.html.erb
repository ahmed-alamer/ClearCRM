<div class="panel panel-success">
	  <div class="panel-heading">
			<h3 class="panel-title">Edit Account</h3>
	  </div>
	  <div class="panel-body">
			<%= form_for @account, layout: :horizontal, :url => {:action => "update"} do |f| %>
				<%= render :partial => "form", :locals => {:f => f} %>
				<div class="form-group">
					<div class="col-sm-offset-3 col-sm-9"> <!-- Matches the helprs output markup, check the docs -->
						<input class="btn btn-success" name="commit" type="submit" value="Create"/>
						<%= link_to("Cancel", {:action => "index"}, :class => "btn btn-danger") %>
					</div>
				</div>
			<% end %>
	  </div>
</div>