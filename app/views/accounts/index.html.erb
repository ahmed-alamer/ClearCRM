<div class="panel panel-primary">
	<!-- Default panel contents -->
	<div class="panel-heading">Accounts</div>
		<div class="panel-body">
			<p class='pull-right'><%= link_to("New Account", {:action => "new"}, :class => "btn btn-success") %></p>
		</div>

		<!-- Table -->
		<table class="table table-hover">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Industry</th>
					<th>Phone</th>
					<th>Rating</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @accounts.each do |account| %>
					<tr>
						<td><%= account.id %></td>
						<td><%= account.name %></td>
						<td><%= account.industry %></td>
						<td><%= account.phone %></td>
						<td><%= account.rating %></td>
						<td>
							<%= link_to("Edit", {:action => "edit", :id => account.id}) %>
							<%= link_to("View", {:action => "show", :id => account.id}) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
</div>