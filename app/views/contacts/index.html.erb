<div class="panel panel-info">
	  <div class="panel-heading">
			<h3 class="panel-title">Contacts</h3>
	  </div>
	  <div class="panel-body">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Work Phone</th>
						<th>Cell Phone</th>
						<th>Dont' Call</th>
						<th>Assistant</th>
						<th>Assistant Phone</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @contacts.each do |contact| %>
						<tr>
							<td><%= contact.name %></td>
							<td><%= contact.work_phone %></td>
							<td><%= contact.cell_phone %></td>
							<td><%= contact.do_not_call ? "Yes" : "No" %></td>
							<td><%= contact.assistant %></td>
							<td><%= contact.assistant_phone %></td>
							<td>
								<%= link_to("Edit", {:action => "edit", :id => contact.id}) %>
								<%= link_to("Show", {:action => "show", :id => contact.id}) %>
							</td>						
						</tr>
					<% end %>
				</tbody>
			</table>
	  </div>
</div>