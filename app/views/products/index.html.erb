<div class="panel panel-default">
	  <div class="panel-heading">
			<h3 class="panel-title">Products</h3>
	  </div>
	  <div class="panel-body">
			<div class="pull-right">
				<%= link_to "New Product", {:action => "new"}, :class => "btn btn-success" %>
			</div>
	  </div>
	  <%= generate_model_table @products do |t| %>
	  	<% t.display_columns :id, :name, :category, :source %>
	  	<% t.add_action :label => "Details", :action => {:method => "show", :param => "id"} %>
	  	<% t.add_action :label => "Edit", :action => {:method => "edit", :param => "id"} %>
	  <% end %>
</div>